<h1>Listing attractions</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>    
  <tr> 
  <td><strong>Name</strong></td>
  <td><strong>Tickets</strong></td>
  <td><strong>Details</strong></td>
</tr>

<% @attractions.each do |att| %>
<tr>
<td><%=att.name%></td>
<td><%=att.tickets%></td>
  <td><%if current_user.admin %><%=link_to "Show #{att.name}", attraction_path(att) %><%else%><%=link_to "Go on #{att.name}", attraction_path(att) %><%end%></td>
</tr>
<% end %>


</tbody>
</table>
<br>

<% if current_user.admin %>
  <p><%=link_to "New Attraction", new_attraction_path %></p>
<% end %>